server {
    listen 443 ssl;
    listen [::]:443 ssl;

    ssl_certificate /home/tapglue/ssl/self.crt;
    ssl_certificate_key /home/tapglue/ssl/self.key;

    #ssl_client_certificate /home/tapglue/ssl/origin-pull-ca.pem;
    #ssl_verify_client on;

    server_name dashboard.tapglue.com containe-dashboard.tapglue.com;

    root /home/tapglue/releases/corporate/dashboard/build;

    index index.html;

    location / {
        if ($http_user_agent ~* "ELB-HealthChecker" ) {
            access_log off;
        }
        if ($http_user_agent ~* "Pingdom" ) {
            access_log off;
        }
        if ($http_user_agent ~* "updown.io" ) {
            access_log off;
        }

        try_files $uri $uri/ /index.html;
    }
}
